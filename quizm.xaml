      xmlns:local="clr-namespace:testapp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="quizm"
      Background="White">

    <Grid>
        <Label x:Name="question" Content="Question: " HorizontalAlignment="Left" Margin="0,34,0,0" 
               VerticalAlignment="Top" Height="61" Width="151" FontSize="30"/>
