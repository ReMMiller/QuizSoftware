<Page x:Class="testapp.quizmaker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:testapp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="quizmaker" Background="White">

    <Grid x:Name="quizplay">

        <Label x:Name="question" Content="Question " HorizontalAlignment="Left"  VerticalAlignment="Top" MinWidth="100" MinHeight=" 50" FontSize="30" />
        <Button x:Name="A" Content="Answer" HorizontalAlignment="Left" Margin="61,193,0,0" VerticalAlignment="Top" Width="272" Height="99" Click="A_Click"/>
        <Button x:Name="B" Content="Answer" HorizontalAlignment="Left" Margin="439,193,0,0" VerticalAlignment="Top" Width="287" Height="99" Click="B_Click"/>
        <Button x:Name="C" Content="Answer" HorizontalAlignment="Left" Margin="61,297,0,0" VerticalAlignment="Top" Width="272" Height="105" Click="C_Click"/>
        <Button x:Name="D" Content="Answer" HorizontalAlignment="Left" Margin="439,297,0,0" VerticalAlignment="Top" Width="287" Height="105" Click="D_Click"/>
        <Frame x:Name="fram" HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="800"/>

    </Grid>
</Page>
